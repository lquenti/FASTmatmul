\newcommand{\applyfooterlinetemplate}{

	\setbeamertemplate{footline}[text line]{
		\begin{beamercolorbox}[sep=0.5em,wd=\paperwidth,leftskip=0.2cm,rightskip=0.1cm]{footlinecolor}
			\insertauthor \hfill \insertVenue \hfill \insertframenumber\,/\,\ref{pg:lastpage}
		\end{beamercolorbox}
	}

}

\newcommand{\applytitlepagetemplate}{
	
	\defbeamertemplate*{title page}{customized}[1][]
	{
		\hspace*{-1.3cm}
		\begin{tikzpicture}[x=\textwidth,y=\textheight]
			\node[inner sep=0,anchor=south west]  (0,0){\includegraphics[width=17cm,height=9cm]{gwdg-background}};
			
			\node[inner sep=0pt, anchor=west,text width=\the\paperwidth-1cm] (title) at (1cm,6.2cm) {\usebeamerfont{title}\Huge\textcolor{colorBlue}{\inserttitle}};
			
			\node[inner sep=0pt, anchor=west,text width=\the\paperwidth-2cm] (title) at (1cm,5.2cm) {\usebeamerfont{subtitle}%
				\textcolor{gray}{\insertsubtitle}};
			
			\node[inner sep=0pt, anchor=west] (author) at (1cm,4.2cm) {\usebeamerfont{author}\setstretch{0.5}\parbox{9cm}{\textcolor{gray}{ \insertauthor }}};
			
			\node[inner sep=0pt, anchor=east] (author) at (\the\paperwidth,2.3cm) {\insertTitleLogo};
			
			\node[inner sep=0pt, anchor=east] (author) at (\the\paperwidth+0.5cm,0.5cm) {\tiny \insertTitleLicense};
			
			\node[inner sep=0pt, anchor=east] (unit) at (\the\paperwidth-0.4cm,\the\paperheight-1.9cm) {\textcolor{gray}{\insertinstitute}};
			
			\node[inner sep=0pt, anchor=west] (unit) at (1.2cm,0.2cm) {\scriptsize \textcolor{black}{\insertdate}};
			
			\node[inner sep=0pt, anchor=west] (author) at (7.5cm,0.2cm) {\usebeamerfont{author}\setstretch{0.5}\parbox{9cm}{\textcolor{black}{\insertVenue}}};
			
			\node[inner sep=0pt, anchor=east] (logo) at (\the\paperwidth-0.4cm,\the\paperheight-0.8cm) {\insertgroupLogo};
			
			\node[inner sep=0pt, anchor=east] (unit) at (\the\paperwidth-0.4cm,\the\paperheight-2.5cm) {\URLColor{colorBlue}{\insertAuthorURL}};
			
		\end{tikzpicture}
		)
	}
	
}